<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent" 
              android:layout_height="wrap_content"
              android:stretchColumns="*">
    <TableRow>
    	<Button android:id="@+id/dayupbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+" 
            android:textSize="28dp"
            android:textStyle="bold" 
            />
    	<Button android:id="@+id/monthupbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+" 
            android:textSize="28dp"
            android:textStyle="bold"
            />
    	<Button android:id="@+id/yearupbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+" 
            android:textSize="28dp"
            android:textStyle="bold"
            />
    </TableRow>
	<TableRow >
		<EditText android:id="@+id/daytext"
        	android:layout_width="match_parent"
        	android:editable="false"
        	android:focusable="false"
        	android:gravity="center"
        	android:textSize="24dp"/>
		<EditText android:id="@+id/monthtext"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:editable="false"
			android:focusable="false"
			android:gravity="center"
			android:textSize="24dp"/>
        <EditText android:id="@+id/yeartext"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:editable="false"
        	android:focusable="false"
        	android:gravity="center"
        	android:textSize="24dp"/>
	</TableRow> 
	<TableRow>
    	<Button android:id="@+id/daydownbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-" 
            android:textSize="28dp"
            android:textStyle="bold"/>
    	<Button android:id="@+id/monthdownbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-" 
            android:textSize="28dp"
            android:textStyle="bold"
            />
    	<Button android:id="@+id/yeardownbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-" 
            android:textSize="28dp"
            android:textStyle="bold"
            />
    </TableRow>

</TableLayout>

	<TextView android:layout_width="match_parent"
				android:layout_height="wrap_content" android:gravity="center"
				android:textSize="15sp"
				android:layout_margin="5dp" 
				android:id="@+id/dateGregorian"/>
	
</LinearLayout>